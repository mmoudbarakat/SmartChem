<style>
    body {
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        margin-bottom: 25px;
    }

    form {
        display: flex;
        margin: 30px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    label {
        font-weight: bold;
        margin-right: 10px;
        padding: 10px;
    }

    input[type="text"],
    input[type="number"] {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
    }

    button[type="submit"] {
        padding: 10px 20px 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 20px;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

    h2 {
        margin-top: 30px;
        font-size: 20px;
    }


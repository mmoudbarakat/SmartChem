<style>
    body {
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        margin-bottom: 25px;
    }

    form {
        display: flex;
        margin: 30px;
        justify-content: center;
        align-items: center;
    }

    label {
        font-weight: bold;
        margin-right: 10px;
    }

    input[type="text"] {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
    }

    button[type="submit"] {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

    h2 {
        margin-top: 30px;
        font-size: 20px;
    }

    p {
        font-size: 16px;
        margin-bottom: 10px;
    }
</style>

<h1>Find Element</h1>

@using (Html.BeginForm("FindElement", "Element", FormMethod.Post))
{
    <label class="f-element" for="name">Element Name:</label>
    <input style="padding:5px" type="text" id="name" name="name" />
    <button type="submit">Search</button>
}

@if (Model != null)
{
    <h2>Element Details</h2>
    <p>Name: @Model.Name</p>
    <p>Valence: @Model.Valence</p>
    <p>Atomic Mass: @Model.AtomicMass</p>
}

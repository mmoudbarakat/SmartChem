                            <td>@Model.FirstElement.AtomicMass</td>
                            <td>@Model.FirstElement.Valence</td>
                        
                        </tr>
                        <tr>
                            <td>@Model.SecondElement.Name</td>
                            <td>@Model.SecondElement.AtomicNumber</td>
                            <td>@Model.SecondElement.ElementName</td>
                            <td>@Model.SecondElement.Id</td>
                            <td>@Model.SecondElement.AtomicMass</td>

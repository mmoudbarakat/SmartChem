                        </tr>
                    </tbody>
                </table>
            </div>
        </div>



    <body/>
	    <div class="chem-formula">
            @if(Model.FirstElement.Valence == 0 || Model.SecondElement.Valence == 0){ @Html.Partial("_NobleGases") }else{
            @Model.FirstElement.ElementName
            <sub>@if(Model.FirstElement.Valence != 0 && Model.FirstElement.Valence != 1){ @Model.FirstElement.Valence }</sub> 
            <div>+</div>
            @Model.SecondElement.ElementName
            <sub>@if(Model.SecondElement.Valence != 0 && Model.SecondElement.Valence != 1){ @Model.SecondElement.Valence }</sub>


		    <div class="arrow">&rarr;</div>


            @Model.FirstElement.ElementName
                <sub>@if(Model.SecondElement.Valence != 0 && Model.SecondElement.Valence != 1){ @Model.SecondElement.Valence }</sub>
                @Model.SecondElement.ElementName
                <sub>@if(Model.FirstElement.Valence != 0 && Model.FirstElement.Valence != 1){ @Model.FirstElement.Valence }</sub>
            }



        </div>


    <div class="mass-label">Mass of Each Element:</div>
    <div class="mass-values">Mass of first element: <span class="atomic-mass">@Model.FirstElement.AtomicMass</span>Grams</div>
    <div class="mass-values">Mass of second element: <span class="atomic-mass">@Model.SecondElement.AtomicMass</span>Grams</div>

        float? mass1 = Model.FirstElement.AtomicMass * Model.FirstElement.Valence;
        float? mass2 = Model.SecondElement.AtomicMass * Model.SecondElement.Valence;
        float? massSum = mass1 + mass2;

    <div class="mass-values"> Mass of both elements: <span class="total-mass"> @massSum </span> Grams  </div>
    <style>
